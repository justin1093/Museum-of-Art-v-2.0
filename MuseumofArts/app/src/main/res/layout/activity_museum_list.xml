<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image"
                            android:clickable="true"
                            android:onClick="b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image3" />

                        <TextView
                            android:id="@+id/dutch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="Museum of Kerala Arts  History, Edapally"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/dutch"
                            android:paddingBottom="8dp"
                            android:paddingLeft="200dp"
                            android:paddingTop="8dp"
                            android:text="9:00 AM - 5:00 PM"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top|center"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image2" />

                        <TextView
                            android:id="@+id/hill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image2"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="Indo-Portuguese Museum, Fort Kochi, "
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/hill"
                            android:paddingBottom="8dp"
                            android:paddingLeft="300dp"
                            android:paddingTop="8dp"
                            android:text="9:00AM-12:00PM"
                            android:textColor="@android:color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top|center"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image1" />

                        <TextView
                            android:id="@+id/hill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image1"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="Hill Palace, Tripunithura"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/hill"
                            android:paddingBottom="8dp"
                            android:paddingLeft="300dp"
                            android:paddingTop="8dp"
                            android:text="9:00AM-5:00PM"
                            android:textColor="@android:color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>



                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="TextView" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>



        <include
            android:id="@+id/news_title"
            layout="@layout/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</RelativeLayout>

