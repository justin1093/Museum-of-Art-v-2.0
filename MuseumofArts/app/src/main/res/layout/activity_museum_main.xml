<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abcd"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    card_view:cardBackgroundColor="#ffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="0dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageMuseum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/museum" />

                        <TextView
                            android:id="@+id/museum_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageMuseum"
                            android:background="@color/color3"
                            android:elevation="18dp"
                            android:padding="8dp"
                            android:text="Museums"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    card_view:cardBackgroundColor="#ffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/plan" />

                        <TextView
                            android:id="@+id/locator_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageLocation"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="Locator"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom"
                    card_view:cardBackgroundColor="#ffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tour" />

                        <TextView
                            android:id="@+id/plan_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image3"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="Plan a tour"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top|center"
                    card_view:cardBackgroundColor="#ffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo" />

                        <TextView
                            android:id="@+id/demo_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image3"
                            android:background="@color/color3"
                            android:elevation="0dp"
                            android:padding="8dp"
                            android:text="Demo"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_View"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top|center"
                    card_view:cardBackgroundColor="#ffff"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2dp"
                    card_view:contentPadding="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/more" />

                        <TextView
                            android:id="@+id/more_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageMore"
                            android:background="@color/color3"
                            android:padding="8dp"
                            android:text="More"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="TextView" />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <include
        android:id="@+id/news_title"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>